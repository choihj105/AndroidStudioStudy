<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TableRow>
        <EditText
            android:id="@+id/edit1"
            android:layout_margin="5dp"
            android:hint="숫자 1 입력"/>
    </TableRow>
    <TableRow>
        <EditText
            android:id="@+id/edit2"
            android:layout_margin="5dp"
            android:hint="숫자 2 입력"/>

    </TableRow>
    <TableRow>

        <Button
            android:id="@+id/btn0"
            android:text="0"
            android:layout_weight="1"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/btn1"
            android:text="1"
            android:layout_weight="1"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btn2"
            android:text="2"
            android:layout_weight="1"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btn3"
            android:text="3"
            android:layout_weight="1"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btn4"
            android:text="4"
            android:layout_weight="1"
            android:layout_margin="5dp"/>

    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btn5"
            android:text="5"
            android:layout_weight="1"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/btn6"
            android:text="6"
            android:layout_weight="1"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btn7"
            android:text="7"
            android:layout_weight="1"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btn8"
            android:text="8"
            android:layout_weight="1"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/btn9"
            android:text="9"
            android:layout_weight="1"
            android:layout_margin="5dp"/>

    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/Add"
            android:layout_width="411dp"
            android:layout_margin="5dp"
            android:layout_span="5"
            android:layout_weight="1"
            android:text="더하기" />
    </TableRow>
    <TableRow>

        <Button
            android:id="@+id/Sub"
            android:layout_width="411dp"
            android:layout_margin="5dp"
            android:layout_span="5"
            android:layout_weight="1"
            android:text="빼기" />
    </TableRow>
    <TableRow>

        <Button
            android:id="@+id/Mul"
            android:layout_width="411dp"
            android:layout_margin="5dp"
            android:layout_span="5"
            android:layout_weight="1"
            android:text="곱하기" />
    </TableRow>
    <TableRow>

        <Button
            android:id="@+id/Div"
            android:layout_width="411dp"
            android:layout_margin="5dp"
            android:layout_span="5"
            android:layout_weight="1"
            android:text="나누기" />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/text_result"
            android:text="계산결과: "
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_span="5"
            android:layout_weight="1"
            android:layout_margin="5dp"/>
    </TableRow>




</TableLayout>